<div class="container-fluid">
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8 mt-5">
            <img align="center" id="burgerImg" src="/assets/img/hamburger.png" alt="hamberger" class="mx-auto d-block">
            <h1 align="center" class="mb-4">EAT Da Burger</h1>
        </div>
        <div class="col-sm-2"></div>
    </div>
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-4 mt-2">
            <h3 align="center">DEVOUR burgers</h3>
            <ul class="list-group">
                {{#each burgers}}
                    {{#unless devour}} 
                        <li class="list-group-item">
                            <p class="d-inline-flex my-2">
                                {{burger_name}}</p>
                                       {{!-- {{> burgers/burger-block devour=false}} --}}
                            <button class="devourBtn btn btn-success float-right" data-newDevour="{{devour}}" data-id="{{id}}">DEVOUR IT!</button>
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-sm-4 mt-2">
            <h3 align="center">DEVOURED Hamburgers</h3> 
            <ul class="list-group">
            {{#each burgers}}
                {{#if devour}}
                    <li class="list-group-item">
                        <p class="d-inline-flex my-2">
                            {{burger_name}}</p>
                        <button class="deleteBtn btn btn-danger float-right" data-id="{{id}}">DELETE</button>
                    </li>
                {{/if}}
            {{/each}}
            </ul>
        </div>
        <div class="col-sm-2"></div>
    </div>
    <div class="row mt-4">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
            <h3 align="center">Add a Burger</h3>
            <form class="create-form">
                <div class="form-group mx-auto" align="center">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Burger name" aria-label="Recipient's username" aria-describedby="basic-addon2" id="burgerName">
                        <div class="input-group-append">
                            <button class="btn btn-dark" type="submit">ADD</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-sm-2"></div>
    </div>

    <!-- Footer -->
    <div class="navbar fixed-bottom justify-content-center">&copy; App by Simon Colman</div>

</div>

